{
  "cleanupPeriodDays": 30,
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo clone:*)",
      "Bash(gh api:*)",
      "Bash(gh auth status:*)",
      "Bash(gh browse:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run check-types:*)",
      "Bash(npm test:*)",
      "Bash(npx prisma:*)",
      "Bash(openspec list:*)",
      "Bash(openspec show:*)",
      "Bash(openspec validate:*)",
      "Bash(openspec archive:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Read(./openspec)",
      "Read(./src)",
      "Read(./docs)",
      "Read(./test)",
      "Read(./.claude)",
      "Read(./.context)",
      "Read(./specs)",
      "Read(./prisma)",
      "Read(./server)",
      "Edit(./openspec)",
      "Edit(./src)",
      "Edit(./docs)",
      "Edit(./test)",
      "Edit(./.claude)",
      "Edit(./specs)",
      "Edit(./server)",
      "mcp__sequential-thinking__sequentialthinking"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(npm publish:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh secret:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./envs/.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Edit(./envs/.env.*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/block-unnecessary-files.js \"$TOOL_INPUT\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/require-tmux-for-servers.js \"$TOOL_INPUT\""
          },
          {
            "type": "command",
            "command": "node ~/.claude/hooks/gate-git-push.js \"$TOOL_INPUT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/detect-console-log.js \"$TOOL_INPUT\""
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/task-completed.js"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); dir=$(pwd | sed \"s|^$HOME|~|\"); used=$(echo \"$input\" | jq -r '.context_window.used_percentage // empty'); if [ -n \"$used\" ]; then used_int=$(printf '%.0f' \"$used\"); if [ \"$used_int\" -ge 80 ]; then color=\"\\033[2;31m\"; elif [ \"$used_int\" -ge 60 ]; then color=\"\\033[2;33m\"; else color=\"\\033[2;32m\"; fi; printf \"%s | ${color}Context: %d%% used\\033[0m\" \"$dir\" \"$used_int\"; else echo \"$dir\"; fi"
  },
  "enabledPlugins": {},
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "teammateMode": "auto",
  "mcpServers": {
    "module-registry": {
      "command": "node",
      "args": [
        "/Users/mac83008148/Workspaces/module-registry-mcp/dist/index.js"
      ],
      "env": {
        "MODULE_REGISTRY_PATH": "/Users/mac83008148/Workspaces/module-registry-mcp/data/registry.json",
        "PROJECT_ROOT": "/Users/mac83008148/Workspaces"
      }
    }
  },
  "feedbackSurveyState": {
    "lastShownTime": 1753951294697
  }
}
